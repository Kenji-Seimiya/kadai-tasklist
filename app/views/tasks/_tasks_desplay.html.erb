<ul class="media-list">
  <% unless tasks == nil %>
    <% tasks.each do |task| %>
      <li class="media">
        <div class="media-left">
          <img class="media-object img-rounded" src="<%= gravatar_url(task.user, options = { size: 50 }) %>" alt="">
        </div>
        <div class="media-body">
          <div>
            <%= link_to task.user.name, user_path(task.user) %> <span class="text-muted">posted at <%= task.created_at %></span>
          </div>
          <div>
            <p><%= task.content %> ==> <%= task.status %></p>
          </div>
          
          <% if current_user == task.user %>
          <div>
            <%= link_to 'edit', edit_task_path(task), class: "btn btn-primary" %>&nbsp
            <%= link_to 'delete', task, method: :delete, data: { confirm: "削除しますか" }, class: "btn btn-danger" %>
          </div>
          <% end %>
          
        </div>
      </li>
    <% end %>
  <% end %>
</ul>